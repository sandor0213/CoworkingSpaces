<% if @coworkingspace.errors.any? %>
   <div id="error_explanation">
     <h2><%= pluralize(@coworkingspace.errors.count, "error") %> </h2>
  
     <ul>
     <% @coworkingspace.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
     </ul>
   </div>
 <% end %>
